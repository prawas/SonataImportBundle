{% extends baseTemplate %}


{% block form %}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'index.h1'|trans({}, 'DoctrsSonataImportBundle') }}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form(form) }}
                            </div>
                        </div>
                        <div class="box-header">
                            <h4>{{ 'index.h2'|trans({}, 'DoctrsSonataImportBundle') }}</h4>
                        </div>
                        <div class="box-body">
                        <table class="table">
                            <tr>
                                <th>
                                    {{ 'index.table.column'|trans({}, 'DoctrsSonataImportBundle') }}
                                </th>
                                <th>
                                    {{ 'index.table.name'|trans({}, 'DoctrsSonataImportBundle') }}
                                </th>
                            </tr>
                            {% set letter_i = 0 %}
                            {% for key, i in builder %}
                                <tr>
                                    <td>
                                        {{ letters[letter_i] }}
                                    </td>
                                    <td>
                                        {{ key }}
                                    </td>
                                </tr>
                                {% set letter_i = letter_i + 1 %}
                            {% endfor %}
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
